# Variables de entorno para Railway (producción)
NODE_ENV=production
PORT=3000

# Variables de base de datos (Railway las inyecta automáticamente)
# No cambiar estos nombres, Railway los usa tal como están
DATABASE_URL=${{DATABASE_URL}}
DB_HOST=${{PGHOST}}
DB_USER=${{PGUSER}}
DB_PASSWORD=${{PGPASSWORD}}
DB_NAME=${{PGDATABASE}}
DB_PORT=${{PGPORT}}

# Email (configurar con tus datos reales)
EMAIL_USER=demo@hospital.com
EMAIL_PASS=demo_password
EMAIL_SISTEMAS=sistemas@hospital.com
EMAIL_RRHH=rrhh@hospital.com

# Configuración de CORS para producción
FRONTEND_URL=https://favastaff-manager.vercel.app
